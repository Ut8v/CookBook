<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBook.Signup"
             BackgroundColor="#C9E5D9">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Image Source="Designer.png" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />
            <Entry Placeholder="Email" Keyboard="Email" Margin="0,0,0,10"/>
            <Entry Placeholder="Password" IsPassword="True" Margin="0,0,0,10"/>
            <Button Text="Sign Up" BackgroundColor="#2ecc71" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>

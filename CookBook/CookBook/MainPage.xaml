<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBook.MainPage"
              BackgroundColor="#E6F4F1">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
        <Image Source="Designer.png" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />
        <Entry Placeholder="Email" Keyboard="Email" Margin="0,0,0,10"/>
        <Entry Placeholder="Password" IsPassword="True" Margin="0,0,0,10"/>
        <Label Text="No account? Sign up" TextColor="Red" FontSize="20" HorizontalOptions="Center" Margin="0,10,0,0" FontAttributes="Bold"  VerticalOptions="CenterAndExpand" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSignUpClicked"/>
            </Label.GestureRecognizers>
        </Label>
        <Button Text="Sign In" BackgroundColor="#3498db" TextColor="White" Clicked="onSignInClicked"/>
    </StackLayout>
    
</ContentPage>

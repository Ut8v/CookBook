<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBook.MainPage"
             BackgroundColor="#E6F4F1"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="True">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <!-- Dropdown Menu -->
            <StackLayout Orientation="Horizontal" BackgroundColor="#8BC34A" Padding="5">
                <Picker Title="Menu"
                        SelectedIndexChanged="OnMenuItemSelected">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Home</x:String>
                            <x:String>Log In/Sign Up</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </StackLayout>

            <!-- Logo Image -->
            <Image Source="Designer.png" HeightRequest="150" HorizontalOptions="CenterAndExpand" Margin="0,20,0,40"/>

            <!-- Email Entry -->
            <Frame Padding="0" Margin="0,0,0,0" CornerRadius="20" BorderColor="Chocolate">
                <Entry x:Name="EmailTxt" Placeholder="Email" Keyboard="Email" Margin="10,10,10,10" ClearButtonVisibility="WhileEditing" IsTextPredictionEnabled="True"/>
            </Frame>

            <!-- Password Entry -->
            <Frame Padding="0" Margin="0,20,0,0" CornerRadius="20" BorderColor="Chocolate">
                <Entry x:Name="PasswordTxt" Placeholder="Password" IsPassword="True" Margin="10,10,10,10"/>
            </Frame>

            <!-- Error Label -->
            <Label x:Name="Error" TextColor="Red" Margin="0,20,0,0" HorizontalOptions="Center"/>

            <!-- Sign In Button -->
            <Button Text="Sign In" BackgroundColor="#3498db" TextColor="White" Clicked="OnSignInClicked" Margin="0,20,0,0"/>

            <!-- Sign Up Label -->
            <Label Text="No account? Sign up" TextColor="Gray" FontSize="16" HorizontalOptions="Center" Margin="0,20,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSignUpClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>